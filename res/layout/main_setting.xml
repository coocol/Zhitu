<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="4dp"
    android:orientation="vertical" 
    android:background="@color/white">

	
	<ScrollView 
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:scrollbarStyle="outsideOverlay" 
    		 >
        	<LinearLayout
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:background="@color/back_gray"
            	android:orientation="vertical" >
            		
      				<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:padding="8dp"
            			android:layout_marginBottom="1dp"
            			android:background="@color/white" >
            			<TextView
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:padding="8dp" 
        					android:text="消息推送"
        					android:textSize="17sp"		
							android:textColor="#000" />      

						<ImageView
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_alignParentRight="true"
						    android:layout_centerVertical="true"
						    android:scaleType="matrix"
						    android:src="@drawable/mini_webview_forward_disable" />
 					
      				</RelativeLayout>
      				<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:padding="8dp"
            			android:layout_marginBottom="1dp"
            			android:background="@color/white" >
            			<TextView
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:padding="8dp" 
        					android:text="意见反馈"
        					android:textSize="17sp"		
							android:textColor="#000" /> 

						<ImageView
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_alignParentRight="true"
						    android:layout_centerVertical="true"
						    android:scaleType="matrix"
						    android:src="@drawable/mini_webview_forward_disable" />
      					
      				</RelativeLayout>
      				
      				<!--   ********************************************************************   -->
      				
      				<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:padding="8dp"
            			android:layout_marginBottom="1dp"
            			android:background="@color/white" >
            			<TextView
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:padding="8dp" 
        					android:text="更新检测"
        					android:textSize="17sp"		
							android:textColor="#000" />

            			<ImageView
            			    android:layout_width="wrap_content"
            			    android:layout_height="wrap_content"
            			    android:layout_alignParentRight="true"
            			    android:layout_centerVertical="true"
            			    android:scaleType="matrix"
            			    android:src="@drawable/mini_webview_forward_disable" />
      					
      				</RelativeLayout>
      				<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:padding="8dp"
            			android:layout_marginBottom="1dp"
            			android:background="@color/white" >
            			<TextView
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:padding="8dp" 
        					android:text="清除网络缓存"
        					android:textSize="17sp"		
							android:textColor="#000" /> 

						<ImageView
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_alignParentRight="true"
						    android:layout_centerVertical="true"
						    android:scaleType="matrix"
						    android:src="@drawable/mini_webview_forward_disable" />
      					
      				</RelativeLayout>
      				
      				<!--   ***********************************************************************   -->
      				<RelativeLayout      				    
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:padding="8dp"
            			android:layout_marginBottom="1dp"
            			android:background="@color/white" >
            			<TextView
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:padding="8dp" 
        					android:text="关于织图"
        					android:textSize="17sp"		
							android:textColor="#000" /> 

						<ImageView
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_alignParentRight="true"
						    android:layout_centerVertical="true"
						    android:scaleType="matrix"
						    android:src="@drawable/mini_webview_forward_disable" />
      					
      				</RelativeLayout>
      				
      				<!--   ***********************************************************************   -->
      				<RelativeLayout      				    
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:padding="8dp"
            			android:layout_marginBottom="1dp"
            			android:background="@color/white" >
            			<TextView
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:padding="8dp" 
        					android:text="更改密码"
        					android:textSize="17sp"		
							android:textColor="#000" /> 

						<ImageView
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_alignParentRight="true"
						    android:layout_centerVertical="true"
						    android:scaleType="matrix"
						    android:src="@drawable/mini_webview_forward_disable" />
      					
      				</RelativeLayout>
      			
      				<!--   ***********************************************************************   -->
      				
      				<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:padding="8dp"
            			android:layout_marginBottom="1dp"
            			android:background="@color/white" >
            			<TextView
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:padding="8dp" 
        					android:text="退出"
        					android:onClick="exit_settings"
        					android:textSize="17sp"		
							android:textColor="#000" />      

						<ImageView
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_alignParentRight="true"
						    android:layout_centerVertical="true"
						    android:scaleType="matrix"
						    android:src="@drawable/mini_webview_forward_disable" />
 					
      				</RelativeLayout>
      			
        	</LinearLayout>
    </ScrollView>
    
</LinearLayout>

