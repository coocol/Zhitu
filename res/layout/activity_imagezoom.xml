<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffcccccc"
    android:orientation="vertical" >

    <!-- 顶部 -->

    <include layout="@layout/layout_title" />
     

	<TextView
	    android:id="@+id/TV_Info"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dip"
	    android:text="info"
	    android:textColor="#ff000000"
	    android:textSize="18dp" />

   <WebView
        android:id="@+id/WV_View"
        android:layout_weight="1.0"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



    <LinearLayout
        android:id="@+id/LL_ToolBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/IB_ZoomIn"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/zoom_in" />
        
        <ImageButton
            android:id="@+id/IB_ZoomOut"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/zoom_out" />
        
        <ImageButton
            android:id="@+id/IB_RotateLeft"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/rotate_left" />

        <ImageButton
            android:id="@+id/IB_RotateRight"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/rotate_right" />
        
        
		<ImageButton
            android:id="@+id/IB_SwapH"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/swap_h" />

        <ImageButton
            android:id="@+id/IB_SwapV"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/swap_v" />
        
        <ImageButton
            android:id="@+id/IB_Crop"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/crop" />
        

    </LinearLayout>

</LinearLayout>